{% for message in session('flash_notification', collect.toArray() ) %}

    {% if message.overlay  %}

        {%  include 'flash::modal' with {'modalClass' : 'flash-modal', 'title' : message.title, 'body' : message.message } %}

    {% else %}

        <div class="alert alert-{{ message.level }}{% if message.important %} alert-important {% endif %}" role="alert">

            {% if message.important %}
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {% endif %}

            {{  message.message  }}
        </div>

    {% endif %}

{% endfor %}

{{ ession.forget('flash_notification') }}
